<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pedido"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jaen.comandapp.PedidoActivity">

    <TextView
        android:id="@+id/pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:text="Num. pedido" />

    <TextView
        android:id="@+id/tvPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="pedido"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fecha"
        android:textStyle="bold"
        android:layout_below="@+id/pedido"
        android:layout_alignEnd="@+id/pedido" />

    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="fecha"
        android:layout_below="@+id/tvPedido"
        android:layout_alignStart="@+id/tvPedido" />

    <TextView
        android:id="@+id/pagado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Pagado"
        android:textStyle="bold"
        android:layout_below="@+id/fecha"
        android:layout_alignEnd="@+id/fecha" />

    <TextView
        android:id="@+id/tvPagado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="pagado"
        android:layout_below="@+id/tvFecha"
        android:layout_alignStart="@+id/tvFecha" />

    <TextView
    android:id="@+id/estado"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="Estado"
    android:textStyle="bold"
    android:layout_below="@+id/pagado"
    android:layout_alignEnd="@+id/pagado" />

    <TextView
        android:id="@+id/tvEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="estado"
        android:layout_below="@+id/tvPagado"
        android:layout_alignStart="@+id/tvPagado" />

    <TextView
        android:id="@+id/idCamarero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Id Camarero"
        android:textStyle="bold"
        android:layout_below="@+id/estado"
        android:layout_alignEnd="@+id/estado" />

    <TextView
        android:id="@+id/tvIdCamarero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="camarero"
        android:layout_below="@+id/tvEstado"
        android:layout_alignStart="@+id/tvEstado" />

    <TextView
        android:id="@+id/idMesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Mesa"
        android:textStyle="bold"
        android:layout_below="@+id/idCamarero"
        android:layout_alignEnd="@+id/idCamarero" />

    <TextView
        android:id="@+id/tvIdMesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="mesa"
        android:layout_below="@+id/tvIdCamarero"
        android:layout_alignStart="@+id/tvIdCamarero" />
</RelativeLayout>
